---
import { Tabs, TabItem } from '@astrojs/starlight/components'
import { Code } from 'astro/components'
---

<Tabs>
  <TabItem label="npm">
    <Code
      code={`# create a new project with npm
npm create astro@latest -- --template starlight`}
      lang="sh"
      theme="css-variables"
    />
  </TabItem>
  <TabItem label="yarn">
    <Code
      code={`# create a new project with yarn
yarn create astro@latest -- --template starlight`}
      lang="sh"
      theme="css-variables"
    />
  </TabItem>
  <TabItem label="pnpm">
    <Code
      code={`# create a new project with pnpm
pnpm create astro@latest -- --template starlight`}
      lang="sh"
      theme="css-variables"
    />
  </TabItem>
</Tabs>
